<?xml version="1.0" encoding="UTF-8"?>
<Invoice xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-1.0" xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-1.0" xmlns:cur="urn:oasis:names:specification:ubl:schema:xsd:CurrencyCode-1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="urn:oasis:names:specification:ubl:schema:xsd:Invoice-1.0" xsi:schemaLocation="urn:oasis:names:specification:ubl:schema:xsd:Invoice-1.0 http://docs.oasis-open.org/ubl/cd-UBL-1.0/xsdrt/maindoc/UBL-Invoice-1.0.xsd">
	<ID>[numfactura]</ID>
	<cbc:IssueDate>[ffactura]</cbc:IssueDate>
	<TaxPointDate>[ffactura]</TaxPointDate>
	
	<!-- Informacion del cliente -->
	<cac:BuyerParty>
		<cac:Party>
			<cac:PartyName>
				<cbc:Name>[nomcliente]</cbc:Name>
			</cac:PartyName>
			<cac:PartyIdentification>
			    <cac:ID>[cifcliente]</cac:ID>
			</cac:PartyIdentification>
			<cac:Address>
				<cbc:Department>[departamento]</cbc:Department>
				<cbc:StreetName>[dircliente]</cbc:StreetName>
				<cbc:CityName>[pobcliente]</cbc:CityName>
				<cbc:PostalZone>[cpcliente]</cbc:PostalZone>
			</cac:Address>
		</cac:Party>
	</cac:BuyerParty>
	
	<!-- Informacion de la empresa que hace la factura -->
	<cac:SellerParty>
		<cac:Party>
			<cac:PartyName>
				<cbc:Name>[nombre_empresa]</cbc:Name>
			</cac:PartyName>
			<cac:PartyIdentification>
			    <cac:ID>[cif_empresa]</cac:ID>
			</cac:PartyIdentification>
			<cac:Address>
				<cbc:StreetName>[dir_empresa]</cbc:StreetName>
				<cbc:CityName>[ciudad_empresa]</cbc:CityName>
				<cbc:PostalZone>[cp_empresa]</cbc:PostalZone>
			</cac:Address>
		</cac:Party>
		<cac:AccountsContact>
			<cbc:Name>[trabajador]</cbc:Name>
		</cac:AccountsContact>
	</cac:SellerParty>
	
	<!-- Forma de pago -->
	<cac:PaymentTerms>
		<cbc:Note>[forma_de_pago]</cbc:Note>
		<cac:ReferenceEventCode>!</cac:ReferenceEventCode>
	</cac:PaymentTerms>
	
	<!-- Total de los impuestos -->
	<cac:TaxTotal>
		<cbc:TotalTaxAmount amountCurrencyID="EUR">[impfactura]</cbc:TotalTaxAmount>
	</cac:TaxTotal>
	
	<!-- TOTALES -->
	<cac:LegalTotal>
		<cbc:LineExtensionTotalAmount amountCurrencyID="EUR">[bimpfactura]</cbc:LineExtensionTotalAmount>
		<cbc:TaxInclusiveTotalAmount amountCurrencyID="EUR">[totalfactura]</cbc:TaxInclusiveTotalAmount>
	</cac:LegalTotal>

	[lineas_factura]
	
</Invoice>