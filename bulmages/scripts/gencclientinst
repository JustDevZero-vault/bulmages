ln -s $1/bulmacont/plugins/pluginproyectos/libpluginproyectos.so        /usr/lib/bulmacont/plugins/
ln -s $1/bulmacont/plugins/plugincanualesods/libplugincanualesods.so        /usr/lib/bulmacont/plugins/
ln -s $1/bulmacont/plugins/pluginregistroiva/libpluginregistrodeiva.so        /usr/lib/bulmacont/plugins/
ln -s $1/bulmacont/plugins/plugincorrector/libplugincorrector.so        /usr/lib/bulmacont/plugins/
